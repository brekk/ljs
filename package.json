{
  "name": "ljs2",
  "description": "Generate docs from your source - based on ljs",
  "version": "1.0.0",
  "homepage": "https://github.com/brekk/ljs2",
  "author": "brekk",
  "contributors": [
    "Oleg Grenrus <oleg.grenrus@iki.fi>",
    "Brekk Bockrath <brekk@brekkbockrath.com>"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/brekk/ljs2.git"
  },
  "bugs": {
    "url": "https://github.com/brekk/ljs2/issues"
  },
  "license": "MIT",
  "main": "lib/literate.js",
  "ava": {
    "babel": "inherit",
    "require": [
      "babel-register"
    ],
    "files": [
      "tests/*.js",
      "tests/**/*.js"
    ],
    "source": [
      "src/*.js",
      "src/**/*.js"
    ],
    "concurrency": 10
  },
  "nyc": {
    "statements": 85,
    "branches": 70,
    "functions": 89,
    "lines": 85,
    "reporter": [
      "lcov",
      "json",
      "html",
      "text",
      "text-summary"
    ],
    "exclude": [
      "node_modules",
      "tests",
      "src/core/fs.js",
      "src/bin/*.js"
    ],
    "include": [
      "src/*.js",
      "src/**/*.js"
    ],
    "require": [
      "babel-register"
    ],
    "all": true,
    "check-coverage": true
  },
  "bin": {
    "ljs2": "./lib/bin/ljs2.js"
  },
  "scripts": {
    "test-old": "make test",
    "test": "npm run lint && npm run build",
    "test-es6": "ava",
    "test-core": "npm run transpile && npm run test-es6",
    "test-log": "npm run test-core > test-output.log",
    "cover": "nyc npm run test-core",
    "report": "istanbul report",
    "transpile": "babel src -d lib",
    "build": "npm run cover",
    "lint": "eslint -c ./.eslintrc src/** --rule 'no-console: 2'",
    "build-all": "npm run build && npm run inception",
    "publish": "npm run build-all",
    "inception": "./lib/bin/ljs2.js --no-code -o README.md ./lib/bin/ljs2.js"
  },
  "devDependencies": {
    "ava": "^0.16.0",
    "babel-cli": "^6.14.0",
    "babel-core": "^6.14.0",
    "babel-eslint": "^6.1.2",
    "babel-plugin-transform-async-to-generator": "^6.8.0",
    "babel-plugin-transform-es2015-destructuring": "^6.9.0",
    "babel-plugin-transform-object-rest-spread": "^6.8.0",
    "babel-preset-es2015": "^6.14.0",
    "babel-register": "^6.14.0",
    "david": "^9.0.0",
    "debug": "^2.2.0",
    "eslint": "^3.5.0",
    "eslint-config-standard": "^6.0.1",
    "eslint-plugin-ava": "^3.0.0",
    "eslint-plugin-babel": "^3.3.0",
    "eslint-plugin-import": "^1.15.0",
    "eslint-plugin-lodash-fp": "^2.0.1",
    "eslint-plugin-promise": "^2.0.1",
    "eslint-plugin-standard": "^2.0.0",
    "nyc": "^8.3.0",
    "uglifyjs": "^2.4.11"
  },
  "keywords": [
    "literate",
    "weave",
    "programming",
    "ljs",
    "documentation"
  ],
  "dependencies": {
    "commander": "^2.6.0",
    "esprima": "^3.0.0",
    "f-utility": "^1.0.4",
    "glob": "^7.0.6",
    "lodash": "^4.15.0",
    "ramda": "^0.24.1"
  }
}
